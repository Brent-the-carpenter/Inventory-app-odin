extends layout 

block content
  h2= page_title

  div 
    if(error)
      p= error    
   
    hr
  div
    
    if(category_list)
        ul 
            each category in category_list
                li 
                    a(href=`/store/category/${category.id}`) #{category.cat_name}
                    p #{category.summary}
                    hr    
    else
        p No categories found.

        

    